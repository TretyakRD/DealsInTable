$root = '.m-row'

{$root}
  display flex
  align-items center
  flex-wrap wrap
  padding 5px 10px
  background linear-gradient($thBg1, $thBg2)
  border 1px solid $border

  &__submit
    outline none
    margin-left auto
    margin-right auto
    font-size 16px
    font-weight 500
    line-height 24px
    padding 5px 10px
    color $white
    border none
    border-radius 4px
    background-color $success
    cursor pointer
