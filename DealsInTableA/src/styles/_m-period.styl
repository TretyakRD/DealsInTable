$root = '.m-period'

{$root}
  display flex
  align-items center
  margin 2px 0
  margin-right 20px

  &__ttl
    margin-right 10px

  &__dash
    width 15px
    height 1px
    background-color black
    margin 0 10px

  &__input
    padding 5px
    font-size 16px
    line-height 24px
    border 1px solid rgba(60, 60, 60, .26)
    border-radius 4px
    color $baseText
    width 150px
    cursor pointer
